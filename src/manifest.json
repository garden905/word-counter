{
    "manifest_version": 3,
    "name": "Text Selection Character Counter",
    "version": "1.0",
    "description": "Count the number of characters in selected text.",
    "permissions": ["scripting"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ]

  }
  